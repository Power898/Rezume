{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <section>
  <nav aria-label='breadcrumb'></nav>
   <ol class='breadcrumb'>
      {{#each breadcrumb}}
        {{#if @last}}
          <li
            class='breadcrumb-item active'
            aria-current='page'
          >{{name}}</li>
        {{else}}
          <li class='breadcrumb-item'><a
              href='{{url}}'
            >{{name}}</a></li>
        {{/if}}
      {{/each}}
    </ol>
  </nav>
  <h2 class="mt-5">{{header}}</h2>
  </section>

  <section>
    <div class="row">
      {{#each sortBlock}}
      <div class="col-3">
      <select class="form-select" aria-label="Default select example">
      <option selected>{{placeholder}}</option>
      {{#each options}}
      <option value="{{value}}">{{text}}</option>
      {{/each}}
      </select>
      </div>
      {{/each}}
    </div>
  </section>
  
  <section>
    <div class="row">
      <div class="col-4">
      {{#with filterBlock}}
      <div class="card">
      <div class="card-body">
          {{#with sellers}}
             <p>{{title}}</p>
             {{#each list}}
             <div class="form-check">
               <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
               <label class="form-check-label" for="flexCheckDefault">
               {{value}}
               </label>
            </div>
             {{/each}}
          {{/with}}
          <hr>
          {{#with brands}}
           <p>{{title}}</p>
           {{#with input}}
           <div>
             <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="{{placeholder}}">
           </div>
           {{/with}}
           {{#each options}}
           <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                {{value}}
              </label>
            </div>
           {{/each}}
          {{/with}}
          <hr>
          {{#with price}}
            {{#with range}}
             <div>
               <input type="email" class="form-control mb-3" id="exampleFormControlInput1" placeholder="{{from}}">
               <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="{{to}}">
             </div>
           {{/with}}
            {{#with button}}
            <a
                    class='btn btn-outline-secondary mt-3'
                    href='{{link}}'
                    role='button'
                  >{{text}}</a>
            {{/with}}
          {{/with}}
          {{#each filterList}}
          <hr>
          <p>{{title}}</p>
             {{#each options}}
             <div class="form-check">
               <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
               <label class="form-check-label" for="flexCheckDefault">
               {{value}}
               </label>
            </div>
             {{/each}}
          {{/each}}
       </div>
      </div>
      {{/with}}
     </div>
   
      <div class="col-8">
        <div class="row g-2">
        {{#each goodsList}}
        <div class="col-6">
        <div class="card">
          <img src="{{img}}" class="card-img-top" alt="...">
        <div class="card-body">
        {{#if isHot}}<span class="badge text-bg-warning">HOT!</span>{{/if}}
        {{#if isNew}}<span class="badge text-bg-primary">Нове</span>{{/if}}
        <br>
        {{#if isFast}}<button type="button" class="btn btn-success btn-sm mt-3">Швидка доставка</button>{{/if}}
        {{#if isFree}}<button type="button" class="btn btn-secondary btn-sm mt-2">Безкоштовна доставка</button>{{/if}}
        <h6 class="my-2">{{name}}</h6>
        {{#with review}}
        <p>{{amount}} {{text}}</p>
        {{/with}}
        <h5 class="my-2">{{price}}</h5>
        <p>{{delivery}}</p>
        {{#each buttons}}
        {{#if isPrimary}}<a
                    class='btn btn-primary mt-2'
                    href='{{link}}'
                    role='button'
                  >{{text}}</a>{{/if}}
        {{#if isSecondary}}<a
                    class='btn btn-secondary mt-2'
                    href='{{link}}'
                    role='button'
                  >{{text}}</a>{{/if}}
        {{/each}}
        <ul class="mt-3">
          {{#each characteristics}}
          <li>{{title}}: {{value}}</li>
          {{/each}}
        </ul>
        </div>
        </div>
        </div>
         {{/each}}
         </div>
      </div>
     
    </div>
  </section>
</div>

