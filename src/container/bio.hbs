{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div></div>
    <main>
      <section>
        <h2>About person</h2>
        <div>
          <ol>
           <li> <em>Name:</em> {{name}}</li>
           <li> <em>Birthdate:</em> {{birthdate}}</li>
           <li> <em>Birthplace: </em> {{birthplace}}</li>
           <li> <em>Deathdate: </em> {{deathdate}}</li>
           <li> <em>Deathplace: </em> {{deathplace}}</li>
           <li> <em>Nationality: </em> {{nationality}}</li>
           <li> <em>Occupation: </em> {{occupation}}</li>
          </ol>
          <h3>Known for</h3>
          <ul>
            {{#each known_for}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <h3>Education</h3>
          <ul>
            {{#each education}}
             <li>{{degree}}</li>
             <li>{{field}}</li>
             <li>{{institution}}</li>
             <li>{{year}}</li>
             {{/each}}
          </ul>
          <h3>Notable publications</h3>
          <ul>
            {{#each notable_publications}}
             <li>
               {{title1}} {{year1}} {{publisher1}}
               {{title2}} {{year2}} {{publisher2}}
             </li>
             {{/each}}
          </ul>
         <h3>Partners</h3>
          <ul>
            {{#each partners}}
             <li>
               {{name1}} {{relationship1}} {{years1}}
               {{name2}} {{relationship2}} {{years2}}
             </li>
             {{/each}}
          </ul> 
          <h3>Awards</h3>
          <ul>
            {{#each awards}}
             <li>{{title}}</li>
             <li>{{year}}</li>
             <li>{{description}}</li>
            {{/each}}
          </ul> 
          <h3>Influences</h3>
          <ul>
            {{#each influences}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <h3>Influenced</h3>
          <ul>
            {{#each influenced}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
          <h3>Quotes</h3>
          <ul>
            {{#each quotes}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
           <h3>Major discoveries</h3>
          <ul>
            {{#each major_discoveries}}
             <li>{{title}}</li>
             <li>{{year}}</li>
             <li>{{description}}</li>
            {{/each}}
          </ul> 
          <h3>Contributions</h3>
          {{#with contributions}}
          <p>{{title}}</p>
          <p>{{description}}</p>
          <p>{{year}}</p>
          <p>{{field}}</p>
          {{/with}}
        </div>
      </section>
    </main>
</div>

