{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

  <section>
    <div>
      <h1>{{header}}</h1>
    </div>
  </section>
  <section class="row">
    <div class="col-8">
      {{#with contacts_data}}
        <div>
          <h2 class="mb-3 mt-0">{{title}}</h2>
        </div>
      <div class="row">
        {{#each buttons}}
         <div class="col-6">
            {{#if isPrimary}}<button
                type='button'
                class='btn btn-warning me-0 mb-2'
              >{{text}}</button>{{/if}}
            {{#if isOutline}}<button
                type='button'
                class='btn btn-outline-warning ms-0 mb-2'
                data-bs-toggle='button'
              >{{text}}</button>{{/if}}
        </div>
        {{/each}}
      </div>
        <div class='row'>
          {{#with form}}
            {{#with input}}
              <div class='col-6'>
                {{#with surname}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text mb-3'>{{caption}}</div>
                {{/with}}
              </div>
              <div class='col-6'>
                {{#with name}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                {{/with}}
              </div>

              <div class='col-6'>
                {{#with phone}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                {{/with}}
              </div>

              <div class='col-6'>
                {{#with email}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                {{/with}}
              </div>
            {{/with}}
            <hr class='my-4' />
            {{#each switch}}
              {{#unless isActive}}
                <div class='form-check form-switch'>
                  <input
                    class='form-check-input'
                    type='checkbox'
                    role='switch'
                    id='flexSwitchCheckDefault'
                  />
                  <label
                    class='form-check-label'
                    for='flexSwitchCheckDefault'
                  >{{text}}</label>
                </div>
              {{else}}
                <div class='form-check form-switch'>
                  <input
                    class='form-check-input'
                    type='checkbox'
                    role='switch'
                    id='flexSwitchCheckChecked'
                    checked
                  />
                  <label
                    class='form-check-label'
                    for='flexSwitchCheckChecked'
                  >{{text}}</label>
                </div>
              {{/unless}}
            {{/each}}
            <hr class='my-4' />
          {{/with}}
        </div>
       {{/with}}
       <div class="col-12">
        {{#with delivery}}
        <h2>{{title}}</h2>
        <div class="card">
          <div class="card-body">
             <div class="row">
                {{#each select}}
               <div class="col-6">
                  {{label}}
                 <select class="form-select" aria-label="Default select example">
                 <option selected>{{placeholder}}</option>
                 {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                 {{/each}}
                 </select>
                </div>
                 {{/each}}
            </div>
          </div>
        </div>
          <div class="mt-3">
              {{#each delivery_type}}
                 <div class="form-check">
                  <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                  <label class="form-check-label" for="exampleRadios2">
                   {{type}}
                  </label>
                 </div>
              {{/each}}
          </div>
          <hr>
          <div>
            {{#with payment}}
             <h2>{{title}}</h2>
                 <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                    {{list.[0].type}}
                    </label>
                 </div>
                <div id="passwordHelpBlock" class="form-text">
                   {{list.[0].description}}
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2" checked>
                    <label class="form-check-label" for="exampleRadios1">
                    {{list.[1].type}}
                    </label>
                 </div>
            {{/with}}
          </div>
          <hr>
          {{#with contact}}
              <h2>{{title}}</h2>
              <div class="row">
                {{#with surname}}
                <div class="col-6">
                    <label
                    class='form-label'>
                  {{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text mb-3'>{{caption}}</div>
                </div>
                {{/with}}
                {{#with name}}
                <div class="col-6">
                    <label
                    class='form-label'>
                  {{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                </div>
                {{/with}}
                {{#with phone}}
                <div class="col-6">
                    <label
                    class='form-label'>
                  {{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                </div>
                {{/with}}
                {{#with email}}
                <div class="col-6">
                    <label
                    class='form-label'>
                  {{label}}</label>
                      <input
                        class='form-control'
                        placeholder={{placeholder}}
                      />
                  <div class='form-text'>{{caption}}</div>
                </div>
                {{/with}}
              </div>
          {{/with}}
          <hr>
          {{#with coment}}
          <label class='form-label'>
            {{label}}</label>
            <input class='form-control' placeholder={{placeholder}}/>
          {{/with}}
        {{/with}}
        <hr>
        {{#with coupon}}
           <h2>{{title}}</h2>
           {{#with select}}
                {{#with availabel_coupon}}
                      <label
                    class='form-label'>
                  {{label}}</label>
                 <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                 <option selected>{{placeholder}}</option>
                 {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                 {{/each}}
                 </select>
                {{/with}}
                {{#with friend_coupon}}
                 <label
                    class='form-label'>
                  {{label}}</label>
                 <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                 <option selected>{{placeholder}}</option>
                 {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                 {{/each}}
                 </select>
                 <div class='form-text mb-3'>Caption text, description, error notification</div>
                {{/with}}
           {{/with}}
           {{#with add}}
                 {{#with friend}}
                    <label
                    class='form-label'>
                  {{label}}</label>
                  <input class='form-control form-control-lg' placeholder={{placeholder}}/>
                  <div class='form-text mb-3'>{{caption}}</div>
                 {{/with}}
                 <div class="row">
                  {{#with colleague}}
                  <div class="col-10">
                  <label
                    class='form-label'>
                  {{label}}</label>
                  <input class='form-control form-control-sm' placeholder={{placeholder}}/>
                  <div class='form-text'>{{caption}}</div>
                  </div>
                  {{/with}}
                 </div>
           {{/with}}
        {{/with}}
        <hr>
      {{#with quiz}}
         <h2>{{title}}</h2>
         {{#with preference}}
         <label
            class='form-label mt-2'>
            {{title}}</label>
            {{#each options}}
            <div class="form-check">
                  <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                  <label class="form-check-label" for="exampleRadios2">
                   {{this}}
                  </label>
                 </div>
            {{/each}}
         {{/with}}
         {{#with your_expirience}}
             <label
                    class='form-label mt-2'>
                  {{label}}</label>
                  <input class='form-control' placeholder={{placeholder}}>
         {{/with}}
         {{#with purchase_frequency}}   
             <label
                    class='form-label mt-3'>
                  {{label}}</label>
                 <select class="form-select" aria-label="Default select example">
                 <option selected>{{placeholder}}</option>
                 {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                 {{/each}}
                 </select>
         {{/with}}
         {{#with factors}}
         <label
                    class='form-label mt-2'>
                  {{title}}</label>
                  {{#each options}}
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                     {{this}}
                    </label>
                    </div>
                  {{/each}}
         {{/with}}
      {{/with}}
      </div>
      </div>
      <div class="col-4">
     <div class='card mb-3' style='width: 17rem;'>
        <div class='card-body'>
          {{#each action_block}}
            {{#if isSuccess}}<button
                type='button'
                class='btn btn-success mb-2'
              >{{text}}</button>{{/if}}
            {{#if isDanger}}<button
                type='button'
                class='btn btn-danger mb-2'
              >{{text}}</button>{{/if}}
            {{#if isInfo}}
              <button
                type='button'
                class='btn btn-info'
              >{{text}}</button>
            {{/if}}
            <br>
          {{/each}}
      </div>
    </div>
    <div>
      <div class="col-4">
         <div class='card' style='width: 17rem;'>
            <div class='card-body'>
              {{#with total}}
              <h2>{{title}}</h2>
                 {{#each item_list}}
                  {{name}}: {{price}} <br>
                 {{/each}}
                 <hr>
                 {{#each additional_info}}
                  {{text}}: {{value}} <br>
                 {{/each}}
                 <hr>
                 {{#with total_price}}
                   {{text}}: {{value}} 
                 {{/with}}
                 <hr>
                 {{#each button}}
                   {{#if isPrimary}}<button type="button" class="btn btn-primary mb-3">{{text}}</button>{{/if}}
                   {{#if isOutline}}<button type="button" class="btn btn-outline-primary">{{text}}</button>{{/if}}
                 {{/each}}
              {{/with}}
            </div>
         </div>
      </div>
    </div>
    <br>
  </section>
  <hr class="mb-0">

