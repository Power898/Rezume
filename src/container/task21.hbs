{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <section>
    <div class='card'>
      <div class='card-body'>
        <p class='h1'>Heading</p>
        {{#with heading}}
          <div class='card'>
            <div class='card-body'>
              {{#with main}}
                <p class='h2'>{{title}}</p>
                <span>{{text}}</span>
                <br />
                {{#with button_text}}
                  <br />
                  <button
                    type='button'
                    class='btn btn-primary'
                  >{{solid}}</button>
                  <br />
                  <br />
                  <button
                    type='button'
                    class='btn btn-outline-primary'
                  >{{outline}}</button>
                {{/with}}
              {{/with}}
            </div>
          </div>
          <br />
          <div class='card'>
            <div class='card-body'>
              {{#with second}}
                <p class='h3'>{{title}}</p>
                <span>{{text}}</span>
                <br />
                <br />
                {{#with button_text}}
                  <button
                    type='button'
                    class='btn btn-secondary'
                  >{{solid}}</button>
                  <br />
                  <br />
                  <button
                    type='button'
                    class='btn btn-outline-secondary'
                  >{{outline}}</button>
                {{/with}}
              {{/with}}
            </div>
          </div>
          <br />
          <div class='card'>
            <div class='card-body'>
              {{#with subblock}}
                <p class='h4'>{{title}}</p>
                <span>{{text}}</span>
                <br />
                <br />
                {{#with button_text}}
                  <button
                    type='button'
                    class='btn btn-dark'
                  >{{solid}}</button>
                  <br />
                  <br />
                  <button
                    type='button'
                    class='btn btn-outline-dark'
                  >{{outline}}</button>
                {{/with}}
              {{/with}}
            </div>
          </div>
        {{/with}}
      </div>
    </div>
  </section>
</div>
<br />
<div class='card'>
  <div class='card-body'>
    {{#with nested_display}}
      <p class='h1'>{{title}}</p>
      <div class='card'>
        <div class='card-body'>
          {{#with children_display}}
            <p class='h3'>{{title}}</p>
            <span>{{text}}</span>
            <br />
            {{#with button}}
              <button
                type='button'
                class='btn btn-outline-warning'
              >{{text}}</button>
            {{/with}}
          {{/with}}
        </div>
      </div>
      <br />
      <p class='h6'>{{header_text}}</p>
      {{#with button}}
        <button
          type='button'
          class='btn btn-info'
        >{{text}}</button>
      {{/with}}
    {{/with}}
  </div>
</div>
<br />
<div class='card'>
  <div class='card-body'>
    {{#with paragraph}}
      <p class='h3 text-uppercase'>{{title}}</p>
      <p class='text-lowercase'>{{text}}</p>
      {{#with button}}
        <button
          <button class="btn btn-link"><a class="link-opacity-100" href="{{url}}">{{text}}</a>
          </button>
      {{/with}}
      <div class='card'>
        <div class='card-body'>
          <ul>
            {{#each list_name}}
              <li><a
                  class='link-opacity-100'
                  href='{{url}}'
                >{{text}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/with}}
  </div>
</div>

