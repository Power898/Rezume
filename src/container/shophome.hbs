{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>

  <section>
    <div>
      {{#with newsBlock}}
        <h2 class='h2 text-center'>{{title}}</h2>
        <br />
        <div class='row'>
          {{#each cards}}
            <div class='col-3'>
              <div
                class='card text-bg-dark mb-3'
                style='max-width: 18rem;'
              >
                <div class='card-header'>{{title}}
                  {{#if isTop}}<span
                      class='badge text-bg-danger'
                    >Топ</span>{{/if}}
                  {{#unless isNew}}<span
                      class='badge text-bg-success'
                    >Нова</span>{{/unless}}
                </div>
                <div class='card-body'>
                  <p class='card-text'>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </div>
  </section>
<hr>
  <section>
    <div>
      <div class="row">
      {{#with goodsBlock}}
      <div class="col-12">
         {{#each tabs}}
         <ul class="nav nav-tabs">
         {{#if isActive}}
       <li class="nav-item">
     <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
       </li>
        {{else}}
        <li class="nav-item">
        <a class="nav-link" href="#">{{text}}</a>
        </li>
         {{/if}}
         {{#if isDisabled}}
         <li class="nav-item">
    <a class="nav-link disabled">{{text}}</a>
         </li>
         {{/if}}
         {{/each}}
         </ul>
         </div>
         </div>
         <br>
         <div class="row gx-2 gy-2">
         {{#each cards}}
         <div class="col-4">
         <div class="card" style="width: 14rem;">
            <img src="{{image}}" class="card-img-top" alt="...">
           <div class="card-body">
             <h5 class="card-title">{{title}}
               {{#if isHot}} 
                  <span class="badge text-bg-warning">HOT!</span>
               {{/if}}
               {{#if isNew}}
                  <span class="badge text-bg-primary">New</span>
                {{/if}}
              </h5>
              <p class="card-text">{{description}}</p>
            </div>
         </div>
         </div>
         {{/each}}
         </div>
      {{/with}}
    </div>
  </section>
  <hr>
  <section>
    <div>
      {{#with subscribe}}
     <div class="card text-bg-dark">
  <div class="card-body">
    <h5 class="card-title">{{header}}</h5>
     <p class="text-end">
     <a href="{{buttons.[0].link}}" class="btn btn-primary">{{buttons.[0].text}}</a>
     <a href="{{buttons.[1].link}}" class="btn btn-primary">{{buttons.[1].text}}</a>
     </p>
    <p class="card-text">{{description}}</p>
  </div>
      {{/with}}
    </div>
  </section>
</div>

